@using BookSawNew.Models


@model List<Product>



<section class="breadcrumb-section py-4" style="background-color: #F3F2EC;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="~/index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Books</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Book Detail</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="book-detail-section py-5">
    <div class="container">
        <div class="row">

            <!-- Book Image -->
            <div class="col-lg-5 col-md-6 mb-4">
                <div class="book-image-wrapper">
                    <div class="main-book-image">
                        <img src="~/images/product-item1.jpg" alt="Book Cover"
                             class="img-fluid book-cover">
                    </div>
                    <div class="book-thumbnails mt-3">
                        <div class="row g-2">
                            <div class="col-3">
                                <img src="~/images/product-item1.jpg" alt="Thumbnail"
                                     class="img-fluid thumbnail-img active">
                            </div>
                            <div class="col-3">
                                <img src="~/images/product-item2.jpg" alt="Thumbnail"
                                     class="img-fluid thumbnail-img">
                            </div>
                            <div class="col-3">
                                <img src="~/images/product-item3.jpg" alt="Thumbnail"
                                     class="img-fluid thumbnail-img">
                            </div>
                            <div class="col-3">
                                <img src="~/images/product-item4.jpg" alt="Thumbnail"
                                     class="img-fluid thumbnail-img">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Book Details -->
            <div class="col-lg-7 col-md-6">
                <div class="book-detail-content">

                    <div class="book-category mb-2">
                        <span class="badge bg-light text-dark">Fiction</span>
                        <span class="badge bg-light text-dark">Adventure</span>
                    </div>

                    <h1 class="book-title">Simple Way of Piece Life</h1>

                    <div class="book-author mb-3">
                        <span class="text-muted">by</span> <a href="#" class="author-name">
                            Armor
                            Ramsey
                        </a>
                    </div>

                    <div class="book-rating mb-3">
                        <div class="stars">
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star-o"></i>
                            <span class="rating-text">(4.0 - 245 reviews)</span>
                        </div>
                    </div>

                    <div class="book-price mb-4">
                        <span class="current-price">$40.00</span>
                        <span class="original-price">$55.00</span>
                        <span class="discount-badge">27% OFF</span>
                    </div>

                    <div class="book-description mb-4">
                        <h5>Description</h5>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
                            veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
                            commodo consequat.
                        </p>
                        <p>
                            Duis aute irure dolor in reprehenderit in voluptate velit esse cillum
                            dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
                            proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
                        </p>
                    </div>

                    <div class="book-meta mb-4">
                        <ul class="list-unstyled">
                            <li><strong>ISBN:</strong> 978-3-16-148410-0</li>
                            <li><strong>Publisher:</strong> Penguin Books</li>
                            <li><strong>Language:</strong> English</li>
                            <li><strong>Pages:</strong> 352</li>
                            <li><strong>Format:</strong> Paperback</li>
                            <li><strong>Published:</strong> January 15, 2023</li>
                        </ul>
                    </div>

                    <div class="book-actions mb-4">
                        <div class="quantity-selector mb-3">
                            <label class="me-3">Quantity:</label>
                            <button class="qty-btn minus">-</button>
                            <input type="number" value="1" min="1" class="qty-input">
                            <button class="qty-btn plus">+</button>
                        </div>

                        <div class="action-buttons">
                            <button class="btn btn-primary btn-add-cart">
                                <i class="icon icon-shopping-cart"></i> Add to Cart
                            </button>
                            <button class="btn btn-outline-secondary btn-wishlist">
                                <i class="icon icon-heart"></i> Wishlist
                            </button>
                            <button class="btn btn-outline-secondary btn-share">
                                <i class="icon icon-share"></i>
                            </button>
                        </div>
                    </div>

                    <div class="delivery-info">
                        <div class="info-item">
                            <i class="icon icon-truck"></i>
                            <span>Free delivery on orders over $50</span>
                        </div>
                        <div class="info-item">
                            <i class="icon icon-refresh"></i>
                            <span>Easy 30 days return policy</span>
                        </div>
                        <div class="info-item">
                            <i class="icon icon-shield"></i>
                            <span>Secure payment methods</span>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- Additional Information Tabs -->
<section class="book-info-tabs py-5" style="background-color: #fff;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <ul class="nav nav-tabs detail-tabs mb-4" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" data-bs-toggle="tab"
                                data-bs-target="#details-tab">
                            Details
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" data-bs-toggle="tab"
                                data-bs-target="#reviews-tab">
                            Reviews
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" data-bs-toggle="tab"
                                data-bs-target="#author-tab">
                            About Author
                        </button>
                    </li>
                </ul>

                <div class="tab-content">
                    <!-- Details Tab -->
                    <div class="tab-pane fade show active" id="details-tab" role="tabpanel">
                        <div class="tab-content-wrapper">
                            <h4>Product Details</h4>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent vel
                                nisi ut metus facilisis suscipit. Nullam vel lectus vel justo
                                placerat sollicitudin. Mauris vehicula arcu nec justo tincidunt,
                                vel scelerisque odio luctus.
                            </p>

                            <h5 class="mt-4">Key Features:</h5>
                            <ul>
                                <li>High-quality paperback binding</li>
                                <li>Premium paper for comfortable reading</li>
                                <li>Elegant cover design</li>
                                <li>Perfect for book collectors</li>
                                <li>Includes author's notes and commentary</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Reviews Tab -->
                    <div class="tab-pane fade" id="reviews-tab" role="tabpanel">
                        <div class="tab-content-wrapper">
                            <h4 class="mb-4">Customer Reviews</h4>

                            <div class="review-item">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <strong>John Doe</strong>
                                        <div class="review-stars">
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                        </div>
                                    </div>
                                    <span class="review-date">December 15, 2025</span>
                                </div>
                                <p class="review-text">
                                    Excellent book! The storytelling is
                                    captivating and the characters are well-developed. Highly
                                    recommend for anyone who enjoys adventure fiction.
                                </p>
                            </div>

                            <div class="review-item">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <strong>Sarah Johnson</strong>
                                        <div class="review-stars">
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star-o"></i>
                                        </div>
                                    </div>
                                    <span class="review-date">December 10, 2025</span>
                                </div>
                                <p class="review-text">
                                    Great read! The plot kept me engaged from
                                    start to finish. Only minor issue was some slow pacing in
                                    the middle chapters.
                                </p>
                            </div>

                            <div class="review-item">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <strong>Michael Chen</strong>
                                        <div class="review-stars">
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star"></i>
                                            <i class="icon icon-star-o"></i>
                                        </div>
                                    </div>
                                    <span class="review-date">December 5, 2025</span>
                                </div>
                                <p class="review-text">
                                    One of the best books I've read this year.
                                    The author's writing style is beautiful and the story is
                                    both moving and thought-provoking.
                                </p>
                            </div>

                            <button class="btn btn-outline-primary mt-4">Write a Review</button>
                        </div>
                    </div>

                    <!-- Author Tab -->
                    <div class="tab-pane fade" id="author-tab" role="tabpanel">
                        <div class="tab-content-wrapper">
                            <div class="author-bio">
                                <div class="row">
                                    <div class="col-md-3">
                                        <img src="~/images/product-item1.jpg" alt="Author"
                                             class="img-fluid author-image">
                                    </div>
                                    <div class="col-md-9">
                                        <h4>Armor Ramsey</h4>
                                        <p class="author-description">
                                            Armor Ramsey is an
                                            acclaimed author known for his captivating
                                            storytelling and deep character development.
                                            With over 15 books published, he has won
                                            numerous literary awards and has a dedicated
                                            following of readers worldwide.
                                        </p>
                                        <p>
                                            Born in New York in 1975, Ramsey began his writing
                                            career after working as a journalist for several
                                            major publications. His unique perspective and
                                            life experiences shine through in every work he
                                            creates.
                                        </p>

                                        <h5 class="mt-4">Other Books by Author:</h5>
                                        <ul class="other-books-list">
                                            <li>The Journey Home (2020)</li>
                                            <li>Whispers in the Wind (2019)</li>
                                            <li>Beyond the Horizon (2018)</li>
                                            <li>Silent Echoes (2017)</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

